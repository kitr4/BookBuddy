    <Grid>
        <StackPanel Width="720" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Width=" 420">
                <Image Source="C:\Users\nicom\Source\Repos\kitr4\BookBuddy\Resources\Images\booky-greet.png" Width="32" Height="Auto" Canvas.Top="4" Canvas.Right="88"/>
            </Canvas>
            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 0 0 64">
                <Image Source="C:\Users\nicom\Source\Repos\kitr4\BookBuddy\Resources\Images\bookbuddy-logo.png" Width="180" Height="Auto" HorizontalAlignment="Stretch"/>
            </DockPanel>

            <DockPanel HorizontalAlignment="Center" Margin="0 0 0 24">
                <Label Width="132" Content="Username: * " FontSize="14" HorizontalContentAlignment="Right"/>
                <TextBox Width="420" Height="32" VerticalAlignment="Center" TextAlignment="Center" Padding="6" Background="{x:Null}">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label Width="132"></Label>
            </DockPanel>
            <DockPanel HorizontalAlignment="Center" Margin="0 0 0 24">
                <Label Width="132" Content="E-mail: * " FontSize="14" HorizontalContentAlignment="Right"/>
                <TextBox Width="420" Height="32" VerticalAlignment="Center" TextAlignment="Center" Padding="6" Background="{x:Null}">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label Width="132"></Label>
            </DockPanel>
            <DockPanel HorizontalAlignment="Center" Margin="0 0 0 24">
                <Label Width="132" Content="Password: * " FontSize="14" HorizontalContentAlignment="Right"></Label>
                <PasswordBox Width="420" Height="32" HorizontalContentAlignment="Center" Padding="6" Background="{x:Null}">
                    <PasswordBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>
                <Label Width="132"></Label>
            </DockPanel>
            <DockPanel HorizontalAlignment="Center" Margin="0 0 0 24">
                <Label Width="132" Content="Repeat password: * " FontSize="14" HorizontalContentAlignment="Right"></Label>
                <PasswordBox Width="420" Height="32" HorizontalContentAlignment="Center" Padding="6" Background="{x:Null}">
                    <PasswordBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>
                <Label Width="132"></Label>
            </DockPanel>

            <DockPanel Width="420" Height="32" Margin="0 0 0 64">
                <CheckBox Margin="0 0 8 0" VerticalAlignment="Center"></CheckBox>
                <TextBlock Height="32" FontSize="14" Padding="0 5 0 0">
                    I agree to the
                    <Hyperlink NavigateUri="#">
                        <Run Text="Terms &#38; Conditions" Foreground="Blue" TextDecorations="Underline"/>
                    </Hyperlink>.
                </TextBlock>
            </DockPanel>

            <DockPanel HorizontalAlignment="Center">
                <Button Width="120" Height="36" Content="Create User" Margin="12 0 12 0" FontSize="13">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="3"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock Width="120" Height="36" TextAlignment="Center" Padding="0 8 0 0">
                    <Hyperlink NavigateUri="#">
                        <Run Text="Cancel" Foreground="Blue" TextDecorations="Underline" FontSize="14"/>
                    </Hyperlink>
                </TextBlock>
            </DockPanel>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 4">
            <Label x:Name="copyrightText" Content="Copyright &#169; 2023 The EJNar Group. All rights reserved." Foreground="#606060"></Label>
        </StackPanel>
    </Grid>

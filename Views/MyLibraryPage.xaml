<Page x:Class="BookBuddy.Views.MyLibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:h="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:local="clr-namespace:BookBuddy.Views" xmlns:viewmodels="clr-namespace:BookBuddy.ViewModels" xmlns:i="clr-namespace:Microsoft.VisualBasic;assembly=Microsoft.VisualBasic.Core" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="BookBuddy">

    <Page.Resources>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                        Background="Red"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="Red"/>

                                <Setter TargetName="border" Property="BorderBrush" Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="True">
                                <Setter TargetName="border" Property="Background" Value="Green"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid
        Background="#FFF19E"
        >
        <Label 
            Content="BookBuddy" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            FontFamily="Cascadia Mono" 
            Background="#FFF19E" 
            Height="63" Width="284" 
            FontWeight="Bold" 
            FontSize="16" 
            TextBlock.TextAlignment="Center" 
            Foreground="Teal"/>

        <Image HorizontalAlignment="Left" Height="92" Margin="709,10,0,0" VerticalAlignment="Top" Width="110" Source="/Views/hiBooky.jpg"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,32,0,0" VerticalAlignment="Top" Width="100" Source="/Views/genericProfilePic.jpg"/>
        <Label Content="{Binding CurrentUser.Username}" HorizontalAlignment="Left" Margin="22,137,0,0" VerticalAlignment="Top" Height="33" Width="88"/>
        <ListBox HorizontalAlignment="Left" Height="409" Margin="539,120,0,0" VerticalAlignment="Top" Width="232" SelectedItem="{Binding CurrentBook}" ItemsSource="{Binding CurrentUser.Library}" DisplayMemberPath="Title" Background="#FF1F7EBD" Foreground="#FF16E8C2"/>
        <Button Click="GoBack_Click"  Content="Back" HorizontalAlignment="Left" Height="32" Margin="9,564,0,0" VerticalAlignment="Top" Width="88" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.013"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Search book" 
                HorizontalAlignment="Left" 
                Margin="284,178,0,0" 
                VerticalAlignment="Top"
                Height="30" 
                Width="84"
                Command="{Binding ButtonSearchBookCommand}"
                />
        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" 
                 Height="22" 
                 Margin="215,132,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding SearchText}"    
                 VerticalAlignment="Top" Width="222">
            <h:Interaction.Triggers>
                <h:EventTrigger EventName="GotFocus">
                    <h:InvokeCommandAction Command="{Binding ClearSearchTextCommand}" CommandParameter="{Binding ElementName=searchTextBox}" />
                </h:EventTrigger>
            </h:Interaction.Triggers>
        </TextBox>
        <Label Content="My Library" HorizontalAlignment="Left" FontSize="20" FontFamily="Century Gothic" Margin="537,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="114">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.596"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <ListBox SelectedItem="{Binding CurrentBook, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" ItemsSource="{Binding BookList}" DisplayMemberPath="Title" Margin="123,247,267,201"/>
        <Button Command="{Binding ButtonRateBookCommand}" Content="Rate book" HorizontalAlignment="Left" Margin="539,534,0,0" VerticalAlignment="Top" Height="33" Width="65"/>
        <Slider x:Name="RatingSlider" Value="{Binding CurrentBook.Rating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Minimum="0" Maximum="20" IsSnapToTickEnabled="True" TickFrequency="1" HorizontalAlignment="Left" Margin="632,542,0,0" VerticalAlignment="Top" Width="139" Height="25"/>
        <Label Content="{Binding CurrentBook.Rating}" HorizontalAlignment="Left" Margin="630,567,0,0" VerticalAlignment="Top" Height="33" Width="25"/>
        <Label Content="Stars" HorizontalAlignment="Left" Margin="642,567,0,0" VerticalAlignment="Top"/>
        <Label Content="Results" FontFamily="Century Gothic" FontSize="20" HorizontalAlignment="Left" Margin="119,217,0,0" VerticalAlignment="Top" Width="79"/>
        <Button Content="Add to library" HorizontalAlignment="Left" Margin="123,404,0,0" VerticalAlignment="Top" Height="30" Width="105"/>
        <Button Content="Remove from library" HorizontalAlignment="Left" Margin="412,491,0,0" VerticalAlignment="Top" Height="38" Width="122" Click="Button_Click"/>
    </Grid>
</Page>
